<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.seuprojeto</groupId>
  <artifactId>excel-editor-mvp</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <source>${maven.compiler.source}</source>
          <target>${maven.compiler.target}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>${jar.plugin.version}</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>Main</mainClass>
            </manifest>
          </archive>
          <includes>
            <include>**/*.class</include>
          </includes>
          <classesDirectory>${project.build.outputDirectory}</classesDirectory>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>Main</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>${exec.plugin.version}</version>
        <configuration>
          <mainClass>Main</mainClass>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <commons.logging.version>1.3.0</commons.logging.version>
    <sqlite.jdbc.version>3.49.1.0</sqlite.jdbc.version>
    <commons.collections4.version>4.4</commons.collections4.version>
    <maven.compiler.source>17</maven.compiler.source>
    <poi.ooxml.schemas.version>4.1.2</poi.ooxml.schemas.version>
    <jar.plugin.version>3.4.1</jar.plugin.version>
    <xmlbeans.version>5.1.1</xmlbeans.version>
    <log4j.core.version>2.24.3</log4j.core.version>
    <exec.plugin.version>3.5.0</exec.plugin.version>
    <maven.compiler.target>17</maven.compiler.target>
    <commons.compress.version>1.26.1</commons.compress.version>
    <poi.version>5.2.3</poi.version>
    <commons.math3.version>3.6.1</commons.math3.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <commons.io.version>2.15.1</commons.io.version>
    <poi.ooxml.version>5.2.3</poi.ooxml.version>
    <log4j.api.version>2.18.0</log4j.api.version>
  </properties>
</project>
